<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- 构造器bean初始化 空参数 -->
	<bean name="bean1" class="com.jimmyking.springproj.HelloImpl2"></bean>
	<!-- 构造器bean初始化 带参数 -->
	<bean name="bean2" class="com.jimmyking.springproj.HelloImpl2">
		<constructor-arg index="0" value="Hello Spring!"></constructor-arg>
	</bean>
	<!-- 构造器bean初始化 静态工厂方法构造 -->
	<bean id="bean3" class="com.jimmyking.springproj.HelloApiStaticFactory"
		factory-method="newInstance">
		<constructor-arg index="0" value="Hello Spring!"></constructor-arg>
	</bean>
	<!-- 构造器bean初始化  非静态工厂类方法构造 -->
	<bean id="beanInstanceFactory" class="com.jimmyking.springproj.HelloApiInstanceFactory"></bean>
	<bean id="bean4" factory-bean="beanInstanceFactory" factory-method="newInstance">
		<constructor-arg index="0" value="Hello Spring! bean4"></constructor-arg>
	</bean>
	

</beans>
